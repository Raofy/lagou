<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>MainFilter</filter-name>
        <filter-class>com.fuyi.student.filter.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MainFilter</filter-name>
        <url-pattern>/main.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>StudentFilter</filter-name>
        <filter-class>com.fuyi.student.filter.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StudentFilter</filter-name>
        <url-pattern>/student.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>StudentClassFilter</filter-name>
        <filter-class>com.fuyi.student.filter.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StudentClassFilter</filter-name>
        <url-pattern>/class.jsp</url-pattern>
    </filter-mapping>
</web-app>